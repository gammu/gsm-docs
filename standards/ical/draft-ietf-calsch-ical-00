                / _CALENDAR_

                  [<a name="ref-params" id="ref-params">params</a>] _:_ _GREGORIAN_ CRLF

                / _GEO_

                  [<a name="ref-params" id="ref-params">params</a>] _:_ value CRLF

                / _PRODID_

                  [<a name="ref-params" id="ref-params">params</a>] _:_ value CRLF

                / _TZ_

                  [<a name="ref-params" id="ref-params">params</a>] _:_ value CRLF

                / _VERSION_ _:_ _1.0_ CRLF

        ; The VERSION calendar property MUST appear in the MIME Calendar
        ; Object.

     entprops   = entprops *CRLF entprop

                / entprop

     entprop    = [<a href="#ref-ws">ws</a>] simprop

                  [<a name="ref-params" id="ref-params">params</a>] _:_ value CRLF

                / [<a href="#ref-ws">ws</a>] _AALARM_


